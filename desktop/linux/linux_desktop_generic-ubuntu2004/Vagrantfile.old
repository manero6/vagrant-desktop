# -*- mode: ruby -*-
# vi: set ft=ruby :

VM_BOX = ENV["VM_BOX"] || "generic/ubuntu2004"
VM_RAM = ENV["VM_RAM"] || "1024"
VM_CPU = ENV["VM_CPU"] || "2"

Vagrant.configure("2") do |config|

  config.vm.box = VM_BOX

  config.vm.provider "libvirt" do |lv|
      lv.memory = VM_RAM
      lv.cpus = VM_CPU
      lv.graphics_type = "spice"
      lv.video_type = "qxl"
      lv.channel type: "spicevmc", target_name: "com.redhat.spice.0", target_type: "virtio"
      lv.channel type: "unix", target_name: "org.qemu.guest_agent.0", target_type: "virtio"
  end
  config.vm.provider "virtualbox" do |vb|
      vb.memory = VM_RAM
      vb.cpus = VM_CPU
  end

  VM_NAME = "ubuntu"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "kubuntu"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "lubuntu"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "xubuntu"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "ubuntu-mate"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "ubuntu-budgie"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

  VM_NAME = "ubuntu-kylin"
  config.vm.define VM_NAME do |vm|
    vm.vm.hostname = VM_NAME
    vm.vm.provision VM_NAME, type: "shell", path: "../../../provision/shell/apt/#{VM_NAME}-desktop.sh"
    vm.vm.provision "rm-gnome3", type: "shell", path: "../../../provision/shell/apt/rm-gnome3.sh"
    vm.vm.provision "reboot", type: "shell", inline: "reboot"
  end

end
